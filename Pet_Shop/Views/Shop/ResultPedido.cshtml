@model Pet_Shop.Models.Pedido

<div class="container-manage">
    <div class="manage-produto" style="width:60%;">
        @if (Model.TipoPagamento == "Pix" && Model.StatusPagamento != "approved")
        {
            <h5 class="titulo-black">Etapa 2: Pagamento<i class="bi bi-bag-check-fill"></i></h5><br>
        }
        else
        {
            <h5 class="titulo-black"> Pedido Concluido! <i class="bi bi-bag-check-fill"></i></h5><br>
        }
        <div class="result-pedido">
            <h5 style="color:black; font-size:23px;">Numero do Pedido: @Model.Cod</h5>
            @if (Model.TipoPagamento == "Pix" && Model.StatusPagamento != "approved")
            {
                <span>Leia o QrCod ou Copie a Chave e realize o Pagamento do seu pedido, após o pagamento clique em Finalizar pedido.</span>
                <div class="img-qrcod">
                    <img class="img-shop" src="data:image/png;base64,@(Convert.ToBase64String(Model.QrCode))" alt="Imagem do Produto">
                </div>
                <div class="row mb-3">
                    <button type="button" id="copy-pix" class="btn btn-primary"><i class="bi bi-clipboard-check-fill"></i>Copiar</button>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ChavePagamento" class="form-control" id="chave-pagamento">
                    </div>
                </div>

                <div class="btn-login">
                    <a class="btn btn-primary" asp-controller="Shop" asp-action="FinalizaPedido" asp-route-Cod="@Model.Cod" ><i class="bi bi-bag-plus-fill"></i> Finalizar Pedido</a>
                </div>
            }
            else
            {
                <span>Seu pedido foi Concluido e Logo será Entregue.</span>
            }
        </div>
    </div>
</div>

