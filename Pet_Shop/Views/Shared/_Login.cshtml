@model Pet_Shop.Models.Cliente

<div class="container container-delete ">
    <div class="login">
        <h5 class="titulo-black"> Login <i class="bi bi-lock-fill"></i></h5><br>
        <form asp-controller="Seguranca" asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" id="returnUrl" value="@ViewBag.returnUrl" />
            <div class="row mb-3">
                <label for="inputNome3" class="col-sm-2 col-form-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" name="Nome" class="form-control" id="inputNome3">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Senha</label>
                <div class="col-sm-10">
                    <input type="password" name="Senha" class="form-control" id="inputPassword3">
                </div>
            </div>

            <div class="btn-login">
                <button type="submit" class="btn btn-primary">Sign in</button>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Register">Register</a>
            </div>
            <span class="text-danger">@ViewBag.AcessoNegado</span>
            <span class="text-success">@ViewBag.ResultRegister</span>
        </form>
    </div>
</div>